{
	"compilerOptions": {
		"target": "ESNext",
		"types": [
			"node",
			"jest",
			"@testing-library/jest-dom"
		],
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "bundler",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"incremental": true,
		"plugins": [
			{
				"name": "next"
			},
			{
				"name": "typescript-plugin-css-modules"
			}
		],
		"forceConsistentCasingInFileNames": true,
		"strictNullChecks": true,
		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"]
		}
	},
	"include": [
		"next-env.d.ts",
		"./src/**/*.ts",
		"./src/**/*.tsx",
		".next/types/**/*.ts"
	],
	"exclude": [
		"node_modules",
		".next"
	]
}
